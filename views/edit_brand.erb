<h1><%= @brand.name %></h1>

<h3>You can change your brand's name here:</h3>
<form action="/brand/<%= @brand.id %>/edit" method="post">
  <div class="form-group">
    <input name="_method" type="hidden" value="patch">
    <label for="new_brand_name">New brand name</label>
    <input class="form-control" type="text" name="new_brand_name"/>
  </div>
  <button class="btn btn-outline-success btn-block" type="submit">Update Brand</button>
</form>

