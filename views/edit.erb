<h1><%= @store.name %></h1>

<h3>You can change your store's name here:</h3>
<form action="/store/<%= @store.id %>/edit" method="post">
  <div class="form-group">
    <input name="_method" type="hidden" value="patch">
    <label for="new_store_name">New store name</label>
    <input class="form-control" type="text" name="new_store_name"/>
  </div>
  <button class="btn btn-success btn-block" type="submit">Update Store</button>
</form>

<form action="/store/<%= @store.id %>/edit" method="post">
    <input name="_method" type="hidden" value="delete">
  <button class="btn btn-success btn-block" type="submit">Delete Store</button>
</form>
